{
    "version": 2,
    "functions": {
        "api/index.php": { 
            "runtime": "vercel-php@0.7.0",
            "maxDuration": 30
        }
    },
    "routes": [
        {
            "src": "/(css|js|images)/(.*)",
            "dest": "/public/$1/$2"
        },
        {
            "src": "/(.*)",
            "dest": "/api/index.php"
        }
    ],
    "outputDirectory": "public",
    "env": {
        "APP_ENV": "production",
        "APP_DEBUG": "false",
        "APP_URL": "https://restaurante-chaqueno.vercel.app"
    }
}